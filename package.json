{
  "name": "fastack-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
		"==== TODO Moving forward, use Taskfile.yml instead of these scripts ====": "",
    "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ DEV SETUP ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━": "",
    "🚀 DEV SETUP": "# Commands for first-time developer setup.",
    "dev-setup": "bash bin/dev-setup.bash",
    "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ DEV COMMANDS ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━": "",
    "🔧 DEV": "# Commands you'll use OFTEN.",
    "dev": "run-p -cls dev:*",
    "dev:server": "cd server && npm run docker && npm run dev",
    "dev:nextjs": "cd nextjs && npm run dev",
    "storybook": "cd nextjs && npm run storybook",
    "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ UTILITY ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━": "",
    "🧰 UTILITY": "# Commands you'll use SOMETIMES.",
    "reset-db": "cd server && npm run docker && npm run reset-db",
    "generate": "cd types && npm run generate",
    "ts-check": "cd server && npm run ts-check && cd ../nextjs && npm run ts-check",
    "━━━━━━━━━━━━━━━━━━━━━━━━ INSTALL/BUILD LIFECYCLE ━━━━━━━━━━━━━━━━━━━━━━━━━": "",
    "📦 INSTALL": "# Commands for installing and building the project.",
    "preinstall": "command -v trove && trove configure-codeartifact || echo 'Trove not found. Please install trove. This can be ignored in a CI context'",
    "postinstall": "tsx setupVSCodeSettings.ts",
    "prepare": "husky && cd types && npm i && cd ../server && npm i && cd ../nextjs && npm i"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "tsx": "4.10.3",
    "typescript": "^5",
    "typescript-plugin-css-modules": "^5.1.0"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "engines": {
    "node": ">=22.11.0 <23"
  }
}
